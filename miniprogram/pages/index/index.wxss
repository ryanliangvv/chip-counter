  width: 90px;
  font-size: 28rpx;
  color: rgb(65, 65, 65);
}
.inroom {
  color: rgb(136, 136, 136);
}
.createbtn { 
  margin: 0px !important;
  background-color: rgb(95, 95, 95) !important;
  border: 1px solid rgb(95, 95, 95) !important;
